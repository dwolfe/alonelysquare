.scoreboard {
  color: white;
  font-family: "CartoGothic Std", "Verdana", "Lucida Grande", "Gill Sans", "Arial", "Helvetica", sans-serif;
  font-size: 32px;
  font-weight: 800;
  margin-top: 55px;
  height: 90px;
  width: 200px;
  animation: animate-scoreboard $time linear 0s infinite;
}

.scoreboard tr:first-child td {
  vertical-align: bottom;
}

.scoreboard tr:last-child td {
  vertical-align: top;
}

.scoreboard td:first-child {
  padding-left: 12px;
  text-align: left;
}

.scoreboard td:last-child {
  overflow: hidden;
  padding-right: 12px;
  position: relative;
  text-align: right;
}

.score {
  text-align: right;
  width: 1em;
}

.before,
.after {
  position: absolute;
  right: 12px;
  bottom: 0;
}

.before {
  animation: animate-before $time linear 0s infinite;
}

.after {
  animation: animate-after $time linear 0s infinite;
}


/* ****************** */
/* *** ANIMATIONS *** */
/* ****************** */

@keyframes animate-scoreboard {
  0% {
    opacity: 0;
  }
  2% {
    opacity: 1;
  }
  12% {
    opacity: 1;
  }
  16% {
    opacity: 0;
  }
  84% {
    opacity: 0;
  }
  88% {
    opacity: 1;
  }
  98% {
    opacity: 1;
  }
  100% {
    opacity: 0;
  }
}

@keyframes animate-before {
  0% {
    bottom: 0;
  }
  86% {
    bottom: 0;
  }
  88% {
    bottom: 100%;
  }
  100% {
    bottom: 100%;
  }
}

@keyframes animate-after {
  0% {
    bottom: -100%;
  }
  86% {
    bottom: -100%;
  }
  88% {
    bottom: 0;
  }
  100% {
    bottom: 0;
  }
}
