.goal {
  border: solid black 2px;
  height: 12px;
  width: 48px;
  margin-left: -26px;
  position: absolute;
  left: 50%;
  top: 44px;
  animation: animate-pitch $time ease 0s infinite;
  z-index: 25;
}

.encroachment-guides {
  animation: animate-pitch $time ease 0s infinite;

  .sideline {
    background-color: black;
    border-top: solid black 1px;
    height: 1px;
    width: 6px;
    margin-top: -1px;
    position: absolute;
    top: 120px;
  }
  .endline {
    background-color: black;
    border-left: solid black 1px;
    height: 6px;
    width: 1px;
    position: absolute;
    top: 48px;
  }
  .sideline-left {
    left: 48px;
  }
  .endline-left {
    left: 120px;
  }
  .endline-right {
    right: 120px;
  }
  .sideline-right {
    right: 48px;
  }
}

.pitch {
  background: green;
  border: solid black 2px;
  height: 720px;
  width: 480px;
  margin-top: 58px;
  margin-left: -242px;
  overflow: hidden;
  position: absolute;
  left: 50%;
  top: 0;
  animation: animate-pitch $time ease 0s infinite;
}

.corner {
  border: solid black 2px;
  border-radius: 12px;
  height: 12px;
  width: 12px;
  margin-top: -7px;
  position: absolute;
  top: 0;
}

.corner-left {
  margin-left: -7px;
  left: 0;
}

.corner-right {
  margin-right: -7px;
  right: 0;
}

.eighteen-yard-box {
  border: solid black 2px;
  border-top: none;
  height: 108px;
  width: 264px;
  margin-left: -134px;
  position: absolute;
  left: 50%;
  top: 0;
}

.six-yard-box {
  border: solid black 2px;
  border-top: none;
  height: 36px;
  width: 120px;
  margin-left: -62px;
  position: absolute;
  top: 0;
  left: 50%;
}

.penalty-spot {
  background-color: black;
  border-radius: 6px;
  height: 6px;
  width: 6px;
  margin-left: -3px;
  position: absolute;
  left: 50%;
  top: 72px;
}

.penalty-spot-arc {
  height: 100px;
  width: 264px;
  margin-left: -134px;
  overflow: hidden;
  position: absolute;
  left: 50%;
  top: 108px;

  .circle {
    margin-left: -61px;
    margin-top: -94px;
    left: 50%;
  }
}

.circle {
  border: solid black 2px;
  border-radius: 60px;
  height: 120px;
  width: 120px;
  position: absolute;
}

.center-circle {
  margin-left: -61px;
  margin-top: -61px;
  left: 50%;
  top: 368px;
}

.center {
  background-color: black;
  border-radius: 6px;
  height: 6px;
  width: 6px;
  margin-left: -3px;
  margin-top: -3px;
  position: absolute;
  left: 50%;
  top: 50%;
}

.halfway-line {
  background-color: black;
  border-top: solid black 1px;
  height: 1px;
  width: 100%;
  position: absolute;
  top: 368px;
}

.stripe {
  background-color: black;
  opacity: 0.1;
  position: absolute;

  &.horizontal {
    height: 32px;
    width: 100%;
    left: 0;

    &.one { top: 32px; }
    &.two { top: 96px; }
    &.three { top: 160px; }
    &.four { top: 224px; }
    &.five { top: 288px; }
    &.six { top: 352px; }
    &.seven { top: 416px; }
    &.eight { top: 480px; }
  }

  &.vertical {
    height: 100%;
    width: 32px;
    top: 0;

    &.one { left: 32px; }
    &.two { left: 96px; }
    &.three { left: 160px; }
    &.four { left: 224px; }
    &.five { left: 288px; }
    &.six { left: 352px; }
    &.seven { left: 416px; }
  }
}


/* ****************** */
/* *** ANIMATIONS *** */
/* ****************** */

@keyframes animate-pitch {
  0% {
    opacity: 0;
  }
  16% {
    opacity: 0;
  }
  18% {
    opacity: 0.4;
  }
  82% {
    opacity: 0.4;
  }
  84% {
    opacity: 0;
  }
  100% {
    opacity: 0;
  }
}
